<div class="container">
  <div class="row">
     <div class="col s12 m12 l12">
        <div class="card horizontal">
          <div class="card-image">
            <img src="/comp.png">
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <p><b><%= @operator.name.upcase %></b></p>
              <br>
              <% if @operator.website %>
                <p>Sito web:  <a href="<%= @operator.website.include?('http://') ? @operator.website : 'http://'+@operator.website %>" target="_blank"><%= @operator.website %></a></p>
                <br>
              <% end %>
              <% if @operator.drone_type %>
                <p>Drone: <%= @operator.drone_type %></p>
                <br>
              <% end %>
              <% if @operator.pec %>
                <p>Indirizzo mail: <%= @operator.pec %></p>
                <br>
              <% end %>
              <% if @operator.phone %>
                <p>Telefono: <%= @operator.phone %></p>
                <br>
              <% end %>
              <% if @operator.infos %>
                <p>Informazioni: <%= @operator.infos %></p>
                <br>
              <% end %>
              <% if @operator.address %>
                <p>Luogo: <%= @operator.address %></p>
                <br>
              <% end %>
            </div>
            <div class="card-action">
            </div>
          </div>
        </div>
      </div>
  </div>
  <br><br>
</div>

